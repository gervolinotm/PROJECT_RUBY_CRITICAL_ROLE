<form action="/characters/<%= @character.id %>" method="post">

  <label for="player-name">Player Name:</label>
  <select name="player_id" id="player-id">
  <% @players.each do |player| %>
  <% if player.id == @character.player_id %>
     <option value=<%= player.id %>selected><%= player.format_name %></option>
  <% else %>
     <option value="<%= player.id %>"><%= player.format_name %></option>
  <% end %>
  <% end %>
 </select>


  <br>

  <label for="character-name">Character Name:</label>
  <input type="text" name="character_name" id="player-name" value="<%= @character.character_name %>"required/>

  <br>

  <label for="race">Select Race:</label>
  <select name="race_id" id="race" selected="<%= @character.race_id %>" >
  <% @races.each do |race_name| %>
  <% if race_name.id == @character.race_id %>
  <option value=<%= race_name.id %> selected><%= race_name.race %></option>
  <% else %>
  <option value="<%= race_name.id %>"><%= race_name.race%></option>
  <% end %>
  <% end %>
  </select>

  <br>

  <label for="class">Select Class:</label>
  <select name="character_class_id" id="class" selected="<%= @character.character_class_id %>">
    <% @classes.each do |char_class| %>
    <% if char_class.id == @character.character_class_id %>
    <option value= <%= char_class.id %> selected><%= char_class.class_name %></option>
    <% else %>
    <option value=<%= char_class.id %>><%= char_class.class_name %></option>
    <% end %>
    <% end %>

  </select>

  <br>

  <label for="level">Level:</label>
  <input type="number" name="level" id="level" value="<%= @character.level %>"required/>

  <br>

  <input type="submit" value="Update Character"/>
</form>



