<form action="/dungeon-masters/<%= @dm.id %>" method="post">

  <label for="dm-name">DM Name:</label>
  <input type="text" name="dm_name" id="dm-name" value="<%= @dm.dm_name %>"required>

  <br>

  <label for="campaign">Select Campaign:</label>
  <select name="campaign_id" id="campaign">
    <% @campaigns.each do |campaign| %>
    <% if campaign.id == @dm.campaign_id %>
       <option value=<%= campaign.id %> selected><%= campaign.campaign_name %></option>
    <% else %>
       <option value=<%= campaign.id %>><%= campaign.campaign_name %></option>
    <% end %>
    <% end %>
  </select>

<br>

  <label for="min-level">Level Req:</label>
  <input type="number" name="min_level" id="min-level" value="<%= @dm.min_level %>" min="1" max="20" required>

<br>

  <label for="max-level">Max Level:</label>
  <input type="number" name="max_level" id="max-level" value="<%= @dm.max_level %>" min="1" max="20" required>

<br>

  <input type="submit" value="Update Campaign">
</form>

