<form action="/dungeon-masters" method="post">
  <label for="dm-name">DM Name:</label>
  <input type="text" name="dm_name" id="dm-name" required>

<br>

  <label for="campaign">Select Campaign:</label>
  <select name="campaign_id" id="campaign">
    <% @campaigns.each do |campaign| %>
     <option value="<%= campaign.id %>"><%= campaign.campaign_name %></option>
    <% end %>
  </select>
<br>

  <label for="min-level">Level Req:</label>
  <input type="number" name="min_level" id="min-level" min="1" max="20" required>

<br>

 <label for="max-level">Max Level:</label>
 <input type="number" name="max_level" id="max-level" min="1" max="20" required>

<br>

  <input type="submit" value="Start New Campaign">
</form>


